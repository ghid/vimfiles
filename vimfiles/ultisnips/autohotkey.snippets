snippet log "Apply logging" b
${1:_log} := new Logger("${2:logger}" A_ThisFunc)

if ($1.Logs(Logger.${3:INPUT})) {
	$1.$3("${4:var}", ${5:$4})
}

return $1.Exit(${6})
endsnippet

snippet logif "Apply conditional logging" b
if (${1:_log}.Logs(Logger.${2:FINEST})) {
	$1.$2("${3:var}", ${4:$3})
}
endsnippet

snippet dump "Log var and value" b
${1:_log}.${2:FINEST}("${3:var}", ${4:$3})
endsnippet
